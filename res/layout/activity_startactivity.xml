<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F0F0"
    android:backgroundTint="#F4EFEF"
    android:orientation="vertical"
    tools:context=".Startactivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:text="Welcome!"
        android:textColor="#2E41AC"
        android:textSize="36sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Email account"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColor="#E8DCDC" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="30dp"
        android:drawableLeft="@android:drawable/ic_menu_view"
        android:ems="10"
        android:hint="password"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColor="#F4E7E7" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Enter number to whome you want to text your location"
        android:textColor="#4C4747"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:ems="10"
        android:hint="Enter number"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColor="#0C0B0B" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E41AC"
        android:text="Create Account"
        android:textColor="#EDE1E1"
        android:textSize="14sp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/donn"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/done"
        app:lottie_speed="2">

    </com.airbnb.lottie.LottieAnimationView>

</LinearLayout>